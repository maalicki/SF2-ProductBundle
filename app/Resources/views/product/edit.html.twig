
{% extends '::base.html.twig' %}

{% block pageTitle %}
    New product | {{ parent() }}
{% endblock %}

{% block content -%}
    <div class="col-sm-offset-2 col-sm-8">
        <div class="col-sm-6"><h1>Product creation</h1></div>
        <div class="col-sm-6">
            <a href="{{ path('product') }}" class="btn btn-success pull-right" style="margin-top: 20px;" data-toggle="tooltip" data-placement="bottom"  title="Go back (without saving)"><i class="glyphicon glyphicon-arrow-left"></i></a>
        </div>
        <div class="col-sm-offset-1 col-sm-10">{{ form(edit_form) }}</div>
    </div>
    
{% endblock %}
