{% extends '::base.html.twig' %}

{% block pageTitle %}
    List | {{ parent() }}
{% endblock %}

{% block content -%}
    <div class="col-sm-offset-2 col-sm-8">
        <div class="col-sm-6"><h1>Product</h1></div>
        <div class="col-sm-6">

            <a href="{{ path('product') }}" class="btn btn-success pull-right" style="margin-top: 20px;" data-toggle="tooltip" data-placement="bottom"  title="Go back (without saving)"><i class="glyphicon glyphicon-arrow-left"></i></a>
            <a href="{{ path('product_edit', { 'id': entity.id }) }}" class="btn btn-warning pull-right" style="margin-top: 20px;" data-toggle="tooltip" data-placement="bottom"  title="Edit"><i class="glyphicon glyphicon-edit"></i></a>
        </div>
        <table class="records_properties table table-hover">

            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ entity.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ entity.name }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ entity.description }}</td>
                </tr>
                <tr>
                    <th>Price</th>
                    <td>{{ entity.price }}</td>
                </tr>
                <tr>
                    <th>Slug</th>
                    <td>{{ entity.slug }}</td>
                </tr>
                <tr>
                    <th>Created</th>
                    <td>{{ entity.created|date('Y-m-d H:i:s') }}</td>
                </tr>
            </tbody>
        </table>
                {% if is_granted('ROLE_SUPER_ADMIN') %}
                    {{ form(delete_form) }}
                {% endif %}
    </div>
{% endblock %}

